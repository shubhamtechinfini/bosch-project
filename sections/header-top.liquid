{% stylesheet %}
{% endstylesheet %}


<div class="header-top">
  <div class="logo">
    {% if section.settings.imageid %}}
<div>
  {{ section.settings.imageid  | image_url: width: 90 | image_tag }}
</div>
{% endif %}
  </div>
  <div class="header-text-tag">
  {% if section.settings.enabletext %}
  <div style="text-align:{{ section.settings.text_position }}">{{ section.settings.textid }}</div>
  {% endif %}
  </div>
</div>



{% schema %}
  {
    "name": "headet top",
    "settings": [
      {
        "type":"image_picker",
        "id": "imageid",
        "label":"Logo"
      },
      {
        "type":"text",
        "id": "textid",
        "label":"Enter Text",
        "default":"Home Appliances"
      },
      {
        "type":"checkbox",
        "id": "enabletext",
        "label":"Enable your text",
        "default":true
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Position your text",
        "options":[
          {"value": "left", "label": "Left"},
          {"value": "center", "label": "center"},
          {"value": "right", "label": "right"}
        ],
        "default": "left"
      }
    ],
    "presets":[
      {
      "name": "My custom Text",
      "category": "text"
      }
    ]
  }
{% endschema %}



